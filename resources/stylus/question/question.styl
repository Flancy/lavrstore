.question
	background-color #E51B4F
	padding 45px 0
	.question__wrap
		background-color #ffffff
		border-radius 54px
		padding 80px 90px
	.h1
		font-size 51px
		line-height 1
		color #292929
		font-weight bold
		margin-bottom 20px
	.text-sub
		font-size 15px
		line-height 1.3
		color #292929
		font-weight 300
		margin-bottom 40px
	.question__form
		background-color #E8E8E8
		border-radius 50px
		padding 50px 40px 30px 40px
		position relative
		.form-footer
			position absolute
			bottom -22px
			left 50%
			margin-left -25%
			.btn-link
				display inline-block
				vertical-align middle
				margin 0 16px
				width 50px
				height 50px
				border-radius 50%
	.form-group
		margin-bottom 20px
	.form-control
		height auto
		padding 18px 40px 18px 40px
		background-color #ffffff
		border 2px solid #ffffff
		border-radius 20px
		font-size 15px
		font-weight 600
		color #292929
		line-height 1
		&.form-control_textarea
			height 200px
			resize none
	.btn
		padding 20px 40px 19px 20px
		width 100%
		font-weight 600
		text-align center
		.btn__ico
			margin-left 5px
			path
				transition all 0.3s ease-in-out
		&:hover, &:active
			path
				fill #292929
	.text-footer
		font-size 15px
		color #8E8E8E
		font-weight bold
		margin-bottom 20px
		text-align center
		display block
		line-height 1