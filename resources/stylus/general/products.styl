.products
	padding-bottom 30px
	.h2
		font-size 32px
		line-height 1
		color #292929
		margin-bottom 50px
		font-weight bold
		span
			color #E51B4F
	.products__item
		box-shadow 0px 0px 20px rgba(0,0,0,0.1)
		border-radius 20px
		.products__item-head
			height 260px
			display flex
			justify-content center
			align-items center
			position relative
			.hot-ico
				position absolute
				top 20px
				right 30px
				width 27px
				height 36px
			.news-ico
				position absolute
				top 20px
				right 20px
				background-color #E51B4F
				border-radius 8px
				padding 10px 20px
				color #ffffff
				display inline-block
				font-size 15px
				line-height 1
		.products__item-body
			padding 20px 15px 20px 15px
			.text-category
				font-size 15px
				color #292929
				margin-bottom 5px
				line-height 1
			.text-head
				margin-bottom 10px
				font-weight bold
				font-size 24px
				line-height 1.3
				color #292929
			.text
				margin-bottom 0
				font-size 14px
				color #292929
				line-height 1.3
		.products__item-foot
			padding 0 15px 20px 15px
			display flex
			justify-content space-between
			align-items center
			.price_strike
				line-height 1
				font-size 11px
				font-weight bold
				color #292929
				margin-bottom 0
				text-decoration line-through
			.price_regular
				font-size 24px
				line-height 1
				font-weight bold
				color #292929
				margin-bottom 0
	&.products_popular
		padding-top 70px
		.product__item
			display flex
			padding 35px 20px
			border 2px solid #E8E8E8
			border-radius 20px
			align-items center
			.item_left
				flex 0 0 35%
				max-width 35%
				padding-right 30px
			.item_right
				display flex
				flex-direction column
				justify-content space-between
			.text-head
				font-size 16px
				color #292929
				font-weight bold
				margin-bottom 25px
			.products__item-foot
				display flex
				justify-content space-between
				align-items center
				.price_strike
					line-height 1
					font-size 11px
					font-weight bold
					color #292929
					margin-bottom 0
					text-decoration line-through
				.price_regular
					font-size 24px
					line-height 1
					font-weight bold
					color #292929
					margin-bottom 0
				.btn 
					border-radius 10px