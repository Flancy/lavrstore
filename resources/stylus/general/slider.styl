.slider
	padding-top 40px
	padding-bottom 40px
	.slider-wrap,
	.info-wrap
		background-color #F8F8F8
		border-radius 40px
		box-shadow 0px 0px 20px #00000019
	.slider-wrap
		padding 70px 40px 20px 40px
		.img-slider
			display inline-block
			width auto
			max-height 220px
		.h2
			margin-bottom 30px
			font-weight bold
			font-size 36px
			line-height 40px
			color #292929
			strong,
			b
				font-weight bold
				color #E51B4F
		.text
			margin-bottom 30px
			font-size 14px
			line-height 20px
			color #292929
			strong,
			b
				font-weight bold
		.btn:first-of-type
			margin-right 30px
		.owl-dots
			margin-top 30px !important
	.info-wrap
		padding 25px 30px
		display flex
		justify-content center
		flex-direction column
		text-align center
		.img-fluid
			width 128px
			height 128px
			border 3px solid #FFBE0F
			border-radius 50%
		.text-head
			margin-top 20px
			margin-bottom 20px
			font-weight bold
			font-size 20px
			color #292929
			text-align center
		.text
			line-height 1
			margin-bottom 10px
			font-weight bold
			font-size 14px
			color #292929
			text-align left
			span
				color #E51B4F
		.btn
			width auto
			margin-top 25px
			display inline-block