.news
	padding-bottom 30px
	.h2
		font-size 32px
		line-height 1
		color #292929
		margin-bottom 50px
		font-weight bold
		span
			color #E51B4F
	.news__item
		margin-bottom 50px
	.news__item-head
		background-size cover
		background-repeat no-repeat
		background-position center center
		height 260px
		border-radius 20px
	.news__item-body
		padding-top 15px
		.date
			font-size 20px
			color #292929
			margin-bottom 25px
			line-height 1
		.text-head
			margin-bottom 10px
			font-weight bold
			font-size 28px
			line-height 1.3
			color #292929
		.text
			margin-bottom 10px
			font-size 20px
			color #292929
			line-height 1.3
		.link
			font-weight bold
			font-size 20px
			display inline-block
			background linear-gradient(to bottom, #D821D1 0%, #E51B4F 100%)
			-webkit-background-clip text
			-webkit-text-fill-color transparent
			.fa 
				display inline-block
				vertical-align middle