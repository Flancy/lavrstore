.contact
	padding 100px 0
	.h1
		font-size 48px
		font-weight bold
		color #292929
		line-height 1
		margin-bottom 25px
	.text-head
		font-size 21px
		color #292929
		font-weight bold
		line-height 1
		margin-bottom 10px
	.text
		font-size 21px
		color #292929
		font-weight 400
		line-height 1
		margin-bottom 12px
		b
			font-weight bold
		.text__link
			text-decoration underline
			display inline-block
			vertical-align middle
			color #292929
			&.text__link_red
				color #E51B4F
			&.text__link_no-decoration
				text-decoration none
			&:hover, &:active
				text-decoration none
				&.text__link_no-decoration
					text-decoration underline